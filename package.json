{
  "name": "stellascript_ide",
  "author": "Bukgeuk_",
  "description": "IDE for StellaScript",
  "version": "0.1.0",
  "main": "public/electron.js",
  "homepage": "./",
  "private": true,
  "dependencies": {
    "@testing-library/jest-dom": "^5.11.4",
    "@testing-library/react": "^11.1.0",
    "@testing-library/user-event": "^12.1.10",
    "@types/jest": "^26.0.15",
    "@types/node": "^12.0.0",
    "@types/react": "^17.0.0",
    "@types/react-dom": "^17.0.0",
    "electron-is-dev": "^2.0.0",
    "electron-settings": "^4.0.2",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-scripts": "4.0.3",
    "typescript": "^4.1.2",
    "web-vitals": "^1.0.1"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "compile": "tsc ./public/electron.ts && tsc ./public/preload.ts",
    "dev": "concurrently -n react,electron \"cross-env BROWSER=none yarn start\" \"wait-on http://localhost:3000 && electron .\"",
    "deploy": "electron-builder -c.extraMetadata.main=build/electron.js",
    "predeploy": "yarn compile-main && yarn build"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "concurrently": "^6.4.0",
    "cross-env": "^7.0.3",
    "electron": "^15.3.1",
    "electron-builder": "^22.13.1",
    "wait-on": "^6.0.0"
  },
  "build": {
    "appId": "dev.bukgeuk.stellascriptide",
    "productName": "StellaScript IDE",
    "files": [
      "build/**/*",
      "node_modules/**/*"
    ],
    "directories":{
      "buildResources": "assets"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64",
            "ia32"
          ]
        }
      ],
      "icon": "./public/favicon.ico"
    },
    "nsis": {
      "installerIcon": "./public/favicon.ico",
      "createDesktopShortcut": true
    }
  }
}
